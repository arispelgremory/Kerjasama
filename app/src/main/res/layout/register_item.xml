<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="16dp">

    <!-- Register Listing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/job_view_background"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/registerStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#1D1D1D"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Pending"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:layout_marginHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:id="@+id/jobImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/job_image"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentTop="true">

                                <TextView
                                    android:id="@+id/jobNameTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#156cd2"
                                    android:text="Food Delivery Services"/>

                                <TextView
                                    android:id="@+id/companyNameTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#1D1D1D"
                                    android:text="FoodPanda Malaysia Sdn Bhd"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="15dp">

                                    <ImageView
                                        android:id="@+id/jobIconImageView"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/job"/>

                                    <TextView
                                        android:id="@+id/jobTypeTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:textColor="#1D1D1D"
                                        android:layout_marginLeft="4dp"
                                        android:text="Food Delivery"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="16dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="4dp"
                                android:layout_marginVertical="4dp"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/locationIconImageView"
                                    android:layout_width="24dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/location" />

                                <TextView
                                    android:id="@+id/locationTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="#1D1D1D"
                                    android:text="Selangor, KL"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="4dp"
                                android:layout_marginVertical="4dp"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/durationIconImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:src="@drawable/duration"/>

                                <TextView
                                    android:id="@+id/durationTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="#1D1D1D"
                                    android:text="07:00 - 24:00"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="4dp"
                                android:layout_marginVertical="4dp"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/salaryIconImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:src="@drawable/salary"/>

                                <TextView
                                    android:id="@+id/salaryTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="#333333"
                                    android:text="RM 2000 - RM 3500"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="Job Description: "/>

                            <TextView
                                android:id="@+id/jobDescriptionContentTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:layout_marginTop="4dp"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation."/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="Welfares:"/>

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/walfresChipGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/walfresChip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chip 1"/>

                            </com.google.android.material.chip.ChipGroup>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="Requirements:"/>

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/requirementChipGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/requirementChip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chip 1"/>

                            </com.google.android.material.chip.ChipGroup>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:gravity="end">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/cancelButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#ed2d2d"
                                android:text="Cancel"
                                android:textStyle="normal"
                                android:textSize="12sp"
                                app:cornerRadius="5dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>